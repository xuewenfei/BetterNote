<span class="modal-x close-modal">&times;</span>

<h3>
  <%= (tag.isNew()) ? "Create Tag" : "Rename Tag" %>
</h3>

<form class="tag group">

  <div class="input">
    <label for="tag-name">标签名</label>
    <input type="text" name="tag[name]"
        id="tag-name" value="<%= tag.get("name") %>">
  </div>

  <div class="form-right group">
    <div class="cancel close-modal">
      取消
    </div>

    <div class="submit">
      <input type="submit" value="Save">
    </div>
  </div>
</form>
