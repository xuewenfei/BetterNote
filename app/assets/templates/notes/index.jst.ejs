<div class="notes-list-header">
  <% if (type === "all") { %>
    <i class="fa fa-book"></i>
    所有笔记
  <% } else if (type === "notebook") { %>
    <i class="fa fa-book"></i>
    <%= model.get("name") %>
  <% } else if (type === "friend") { %>
    <i class="fa fa-user"></i>
    <%= model.get("username") %>
  <% } %>
</div>
<ul class="notes">
</ul>
<div class="notes-list-footer group"f>
  <div class="notes-list-footer-left dropdown-parent">
    <div class="notes-list-footer-left-text">
      视图选项
      <i class="fa fa-caret-up"></i>
    </div>
    <ul class="options-dropdown hidden">
      <li class="options-dropdown-header">
        排序
      </li>
      <li class="sort-option" data-sort-field="created_at"
                              data-sort-toggle="-1">
        创建日期 (newest first)
      </li>
      <li class="sort-option" data-sort-field="created_at"
                              data-sort-toggle="1">
        创建日期 (oldest first)
      </li>
      <li class="sort-option" data-sort-field="updated_at"
                              data-sort-toggle="-1">
        更新日期 (newest first)
      </li>
      <li class="sort-option" data-sort-field="updated_at"
                              data-sort-toggle="1">
        更新日期 (oldest first)
      </li>
      <li class="sort-option" data-sort-field="title"
                              data-sort-toggle="1">
        标题 (降序)
      </li>
      <li class="sort-option" data-sort-field="title"
                              data-sort-toggle="-1">
        标题 (升序)
      </li>
    </ul>
  </div>
</div>
