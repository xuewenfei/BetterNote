<header class="comments-header group">
  <div class="note-show-header-left">
    <i class="fa fa-caret-down"></i>&nbsp;
    <i class="fa fa-comments"></i>
    注释
  </div>
</header>
<div class="comments-content">
  <% if (comments.length === 0) { %>
    <div class="comment-list-text no-comments">
      没有注释
    </div>
  <% } %>
  <ul class="comments-list">
    <% comments.each(function(comment) { %>
      <li>
        <div class="comment-body">
          <%= comment.get("body") %>
        </div>
        <div class="comment-info group">
          <div class="comment-info-left">
            Posted by <%= comment.author.get("username") %>
            <%= moment(comment.get("created_at")).fromNow() %>
          </div>
          <div class="comment-info-right">
            <% if (BetterNote.currentUser.get("id") === comment.author.get("id")) { %>
              <form class="delete-comment">
                <button class="note-show-button comment"
                data-comment-id="<%- comment.get("id")%>">
                  删除&nbsp;
                  <i class="fa fa-trash-o"></i>
                </button>
              </form>
            <% } %>
          </div>
        </div>
      </li>
    <% }) %>
  </ul>
  <div class="new-comment">
    <div class="comment-button new">
      <i class="fa fa-plus"></i>&nbsp;
      新建注释
    </div>
  </div>
</div>
